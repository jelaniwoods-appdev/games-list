<% was_validated = game.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(game, html: form_html_options) do |f| %>
  <div class="form-group">
    <% list_id_class = "form-control" %>
    <% list_id_was_invalid = game.errors.include?(:list_id) %>

    <% if was_validated %>
      <% if list_id_was_invalid %>
        <% list_id_class << " is-invalid" %>
      <% else %>
        <% list_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :list_id %>

    <%= f.number_field :list_id, class: list_id_class, placeholder: "Enter list" %>
    <% if list_id_was_invalid %>
      <% game.errors.full_messages_for(:list_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = game.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>

    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% game.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% video_trailer_class = "form-control" %>
    <% video_trailer_was_invalid = game.errors.include?(:video_trailer) %>

    <% if was_validated %>
      <% if video_trailer_was_invalid %>
        <% video_trailer_class << " is-invalid" %>
      <% else %>
        <% video_trailer_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :video_trailer %>

    <%= f.text_field :video_trailer, class: video_trailer_class, placeholder: "Enter video trailer" %>
    <% if video_trailer_was_invalid %>
      <% game.errors.full_messages_for(:video_trailer).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = game.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>

    <%= f.text_field :image, class: image_class, placeholder: "Enter image" %>
    <% if image_was_invalid %>
      <% game.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = game.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>

    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% game.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% position_class = "form-control" %>
    <% position_was_invalid = game.errors.include?(:position) %>

    <% if was_validated %>
      <% if position_was_invalid %>
        <% position_class << " is-invalid" %>
      <% else %>
        <% position_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :position %>

    <%= f.number_field :position, class: position_class, placeholder: "Enter position" %>
    <% if position_was_invalid %>
      <% game.errors.full_messages_for(:position).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
