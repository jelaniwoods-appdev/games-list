<div class="card mb-3">
  <h2 class="card-header h4">
    Game #<%= game.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>List</dt>
      <dd><%= game.list_id %></dd>

      <dt>Name</dt>
      <dd><%= game.name %></dd>

      <dt>Video trailer</dt>
      <dd><%= game.video_trailer %></dd>

      <dt>Image</dt>
      <dd><%= game.image %></dd>

      <dt>Description</dt>
      <dd><%= game.description %></dd>

      <dt>Position</dt>
      <dd><%= game.position %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back game, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_game_url(game), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to game, method: :delete, data: { confirm: "Do you really want to delete this game?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(game.updated_at) %> ago
  </div>
</div>
