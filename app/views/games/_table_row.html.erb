<tr>
  <td>
    <%= game.list_id %>
  </td>

  <td>
    <%= game.name %>
  </td>

  <td>
    <%= game.video_trailer %>
  </td>

  <td>
    <%= game.image %>
  </td>

  <td>
    <%= game.description %>
  </td>

  <td>
    <%= game.position %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to game, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_game_url(game), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to game, method: :delete, data: { confirm: "Do you really want to delete this game?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
